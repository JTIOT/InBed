@model InBed.Service.Dto.DeviceDto
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Adm/Views/Shared/_Layout_Body.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                編輯設備
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form" id="submitForm" method="POST" action="@Request.Url.PathAndQuery" novalidate="novalidate">
                        @Html.HiddenFor(item => item.Id, new { @class = "form-control" })
                        <div class="form-group ">
                            @Html.LabelFor(item => item.device_number, new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(item => item.device_number, new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group ">
                            @Html.LabelFor(item => item.FacilitatorName, new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(item => item.FacilitatorName, new { @class = "form-control",disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group ">
                            @Html.LabelFor(item => item.device_type, new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.EnumDropDownListFor(item => item.device_type, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group ">
                            @Html.LabelFor(item => item.device_model, new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(item => item.device_model, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group ">
                            @Html.LabelFor(item => item.status, new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.EnumDropDownListFor(item => item.status, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group ">
                            @Html.LabelFor(item => item.is_enable, new { @class = "control-label col-lg-2" })
                            <div class="checkbox-inline">
                                @Html.CheckBoxFor(item => item.is_enable, new { @class = "" })

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-success" type="submit">保存</button>
                                <button class="btn btn-default" type="button" onclick="InBed.goback(this)">返回</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>
@section Scripts{
    <script>
        $("#submitForm").validate({
            submitHandler: InBed.buttonLoading,
            rules: {
                LoginName: {
                    required: true,
                    minlength: 5,
                    maxlength: 20
                },
                Email: {
                    required: true,
                    minlength: 5,
                    maxlength: 36,
                    email:true
                },
                RealName: {
                    required: true,
                    minlength: 2,
                    maxlength: 20
                }
            },
            messages: {
                LoginName: {
                    required: "請輸入登錄賬號",
                    minlength: "最小長度為5個字符",
                    maxlength: "最大長度為20個字符"
                },
                Email: {
                    required: "請輸入註冊郵箱",
                    minlength: "最小長度為6個字符",
                    maxlength: "最大長度為36個字符",
                    email: "請輸入正確的郵箱地址"
                },
                RealName: {
                    required: "請輸入真實姓名",
                    minlength: "最小長度為2個字符",
                    maxlength: "最大長度為20個字符"
                }
            }
        });
    </script>
}
